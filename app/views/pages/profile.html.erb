<div class="container">
  <div class="row mt-3">
    <div class="col-sm-12">
      <div class="jumbotron">
        Header
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <div class="card">
        <div class="card-body" style="padding: 0.2rem;">
          <div class="row mt-3 user-info">
            <%= render('pages/user_info') %>
          </div>
          <div class="row my-3 stats">
            <%= render("pages/stats") %>
          </div>
        </div>
      </div>
    </div>
    <%= render('pages/follow_form') %>
    <div class="col-sm-6">
      <% if @user.username == current_user.username %>
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-md-2">
                <% if @user.avatar.attached? %>
                  <%= image_tag @user.avatar.variant(resize: "50x50!"), class: "rounded-circle" %>
                <% else %>
                  <img src="/bg.jpg" height="50" width="50" class="rounded-circle">
                <% end %>
              </div>
              <div class="col-md-10 no-padding">
                <%= render 'pages/form' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%= render('pages/posts') %>
    </div>

    <div class="col-sm-3">
      <div class="card">
        <div class="card-body">
          Whom to follow
        </div>
      </div>
      <div class="card mt-3">
        <div class="card-body">
          Trends
        </div>
      </div>
    </div>

  </div>
</div>
