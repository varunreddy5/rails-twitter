<% @user ||= current_user %>
<div class="col-md-4 text-center">
    <p class="follow-heading">Tweets</p>
    <p class="stat" id="posts-count"><%= current_user.posts.count %></p>
</div>
<div class="col-md-4 text-center">
  <a href="<%= following_user_path(@user) %>">
    <p class="follow-heading">Followers</p>
    <p class="stat" id="followers"><%= current_user.followers.count %></p>
  </a>
</div>
<div class="col-md-4 text-center">
  <a href="<%= following_user_path(@user) %>">
    <p class="follow-heading">Following</p>
    <p class="stat" id="following"><%= current_user.following.count %></p>
  </a>
</div>
