<% pre_like = likeable.likes.find { |like| like.user_id == current_user.id} %>
<% if user_signed_in? && current_user.likes?(likeable) %>
  <%= likeable.likes.count %>
  <%= link_to post_like_path(likeable, pre_like), method: :delete, remote: true do %>
    <i class="fa fa-heart" style= "color: red"></i>
  <% end %>
<% else %>
  <%= likeable.likes.count %>
  <%= link_to post_likes_path(likeable), method: :post, remote: true do %>
    <i class="far fa-heart"></i>
  <% end %>
<% end %>
